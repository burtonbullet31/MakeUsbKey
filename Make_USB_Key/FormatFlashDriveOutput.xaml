<Window x:Class="Make_USB_Key.FormatFlashDriveOutput"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Make_USB_Key"
        mc:Ignorable="d"
        Title="Operations Output" Height="460" Width="517.5" ResizeMode="NoResize">
    <Grid>
        <Label x:Name="label" Content="Formatting Drive:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="DriveLetterTextBox" HorizontalAlignment="Left" Height="23" Margin="112,15,0,0" TextWrapping="NoWrap" VerticalAlignment="Top" Width="Auto" BorderThickness="0" BorderBrush="{x:Null}"/>
        <ListView x:Name="OutputWindow" Background="Black" Foreground="Green" ScrollViewer.CanContentScroll="True" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto" Margin="10,41,10,10">

        </ListView>
        <ProgressBar x:Name="FileProgress" HorizontalAlignment="Left" Height="21" Margin="312,15,0,0" VerticalAlignment="Top" Width="172"/>
        <Label x:Name="label_Copy" Content="File Progress:" HorizontalAlignment="Left" Margin="233,12,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
